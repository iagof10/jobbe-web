    <script>

        document.getElementById("btnSendRegisterCode").addEventListener("click", SendRegisterCode, false);

        function SendRegisterCode() {

            document.getElementById("btnSendRegisterCode").style.visibility = "hidden";
            document.getElementById("idProgressBar").style.visibility = "visible";

            var registerCode = document.getElementById("registerCode").value
            const ajaxSession = new XMLHttpRequest();
            ajaxSession.open('GET', RotaWeb + 'GetSessionUser');
            ajaxSession.responseType = 'json';
            ajaxSession.onload = function(e) {

                if (ajaxSession.readyState == 4) { 
                
                    if (this.status == 200) {

                        let idUsuario = this.response

                        const ajax = new XMLHttpRequest();
                        ajax.open('GET', RotaAPI + 'api/UsuarioPrestador/RegisterCode/' + idUsuario + "/" + registerCode);
                        ajax.responseType = 'json';
                        ajax.onload = function(e) {

                            if (ajax.readyState == 4) { 
                
                                document.getElementById("idProgressBar").style.visibility = "hidden";
                                document.getElementById("btnSendRegisterCode").style.visibility = "visible";

                                if (this.status == 200) {
                                    if (this.response.data) {

                                        window.location.replace(RotaWeb + "Perfil/Perfil");

                                    } else {

                                        //alertErro()

                                    }
                                } else {
                                    //alertErro()
                                }

                            }
                        };

                        ajax.send();

                    } else {

                        document.getElementById("idProgressBar").style.visibility = "hidden";
                        document.getElementById("btnSendRegisterCode").style.visibility = "visible";

                    }

                }

            };

            ajaxSession.send();
        }


        document.getElementById("btnReenviarCodigo").addEventListener("click", ReenviarCodigoAtivacao, false);

        function ReenviarCodigoAtivacao() {
            
            const ajaxSession = new XMLHttpRequest();
            ajaxSession.open('GET', RotaWeb + 'GetSessionUser');
            ajaxSession.responseType = 'json';
            ajaxSession.onload = function(e) {

                if (ajaxSession.readyState == 4) { 
                
                    if (this.status == 200) {

                        let idUsuario = this.response

                        const ajax = new XMLHttpRequest();
                        ajax.open('GET', RotaAPI + 'api/UsuarioPrestador/ReenviarCodigoAtivacao/' + idUsuario);
                        ajax.responseType = 'json';
                        ajax.onload = function (e) {
                            if (this.status == 200) {

                                if (this.response.data) {

                                    alertSucess()
                                }
                    
                            }else{
                                alertErro()
                            }
                        };

                        ajax.send();

                    } else {

                        alertErro()

                    }

                }

            };

            ajaxSession.send();
        }

        function alertErro() {
            sweetAlert("Usuário não encontrado!", "", "error")
        }


        function alertSucess() {
            swal({
                title: 'Código de ativação enviado!',
                text: 'Enviamos um novo código, caso não apareça na sua caixa de entrada, dê uma olhadinha na sua caixa de Spam.',
                type: 'success',
                showCancelButton: false,
                confirmButtonColor: '#1ea8e7',
                confirmButtonText: 'Yes!'
            }).then(() => {
            });
        }

    </script>


